<div class="row">
  <div class="col-lg-8">
    <div class="block">
      <div class="block-title">
        <h2><strong>Assigned Users</strong></h2>
      </div>
      <div class="table-responsive" id="theme_assigned_users">
        <table class="table" data-theme-id=<%= @theme.id %>>
          <thead>
          <tr>
            <th><i class="fa fa-user"></i></th>
            <th>User Name</th>
            <th>Activated Date</th>
            <th>Expire Date</th>
            <th>No. Surveys</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% for account_theme in @account_themes %>
              <%= partial "partials/theme_list/user", :locals => {:account_theme => account_theme} %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <%= partial "partials/theme_list/assign_user_to_theme" %>
  </div>
</div>

<div class="modal fade" id="unassign_confirm_dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Unassign confirmation?</h4>
      </div>
      <div class="modal-body">
        Are you sure want unassign this theme for this user?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-primary">Yes</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div><!-- /.modal -->
<%= partial 'partials/theme_list/edit_assignment' %>
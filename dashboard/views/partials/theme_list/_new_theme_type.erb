<div class="block">
  <div class="block-title">
    <h2><i class="fa fa-plus"></i> Add New Theme Type</h2>
  </div>
  <% form_tag url(:theme_list, :new_theme_type), method: "post", id: "create-theme-type-form", class: "form-horizontal form-bordered" do %>
      <div class="form-group">
        <label class="col-xs-4 control-label" for="add-name">Theme Type Description</label>

        <div class="col-xs-8">
          <input type="text" id="add-name" name="theme_type[theme_type_description]" class="form-control" placeholder="Enter Theme Name..">
        </div>
      </div>
      <div class="form-group">
        <label class="col-xs-4 control-label" for="add-available-for-all">Available for all</label>

        <div class="col-xs-8">
          <label>
            <input type="checkbox" id="add-available-for-all" name="theme_type[available_for_all]"> Yes
          </label>
        </div>
      </div>

      <div class="form-group form-actions">
        <div class="col-xs-9 col-xs-offset-3">
          <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Create Theme Type</button>
        </div>
      </div>
  <% end %>
</div>
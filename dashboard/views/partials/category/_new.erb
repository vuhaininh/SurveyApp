<div class="block">
  <div class="block-title">
    <h2><i class="fa fa-plus"></i> New Category</h2>
  </div>
  <% form_tag url(:category, :new_category), method: "post", id: "create-category-form", class: "form-horizontal form-bordered" do %>
      <div class="form-group">
        <label class="col-xs-3 control-label" for="add-name">Name</label>

        <div class="col-xs-9">
          <input type="text" id="add-name" name="category[name]" class="form-control" placeholder="Enter Category Name..">
        </div>
      </div>
      <div class="form-group form-actions">
        <div class="col-xs-9 col-xs-offset-3">
          <button type="submit" class="btn btn-sm btn-primary">Create Category</button>
        </div>
      </div>
  <% end %>
</div>